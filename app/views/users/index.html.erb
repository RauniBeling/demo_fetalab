<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<%= form_with(url: users_path, method: "get", id: "search-form") do %>
  <div class="field">
    <%= text_field_tag :search, params[:search], placeholder: "Pesquisar por nome, e-mail, telefone ou CPF" %>
    <%= submit_tag "Pesquisar" %>
  </div>
<% end %>

<%= link_to "New user", new_user_path %>


</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>CPF</th>
      <th>Visualizar</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="user-row">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.cpf %></td>
        <td><%= link_to "Show this user", user %></td>
      </tr>
    <% end %>
  </tbody>
</table>


